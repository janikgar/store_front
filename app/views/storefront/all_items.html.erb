<% (current_user != nil) && (current_user.first_name != nil) ? greeting = ", #{current_user.first_name}!" : greeting = "!" %>
<div class="jumbotron">
	<h1>Welcome to the TTS Store<%= greeting %></h1>
</div>

<div class="row">
	<% @products.each do |product| %>
		<div class="col-md-4">
			<%= render "product_display", product: product %>
		</div>
	<% end %>
</div>