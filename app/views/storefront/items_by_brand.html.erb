<div class="jumbotron">
    <h1>Our Brands</h1>
    <p>Look at our high-quality brands!</p>
</div>

<% @products_by_brand.each do |brand| %>
    <div class="well">
        <h2><%= brand.keys.first %></h2>
        <% brand.values[0].each do |product| %>
            <%= render "product_display", product: product %>
        <% end %>
    </div>
<% end %>